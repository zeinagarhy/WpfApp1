                    </StackPanel>

                    <!--// Tooltip //-->

                    <Grid.ToolTip>

                        <ToolTip x:Name="tt_signout"
                                 Content="Signout"
                                 Style="{StaticResource tt_style}"/>

                    </Grid.ToolTip>
                </Grid>


            </Grid>

        </Grid>
    </Grid>
</Window>
