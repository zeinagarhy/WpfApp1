                                        <TextBlock Text="Type" Foreground="White" FontSize="20" FontWeight="Medium" FontFamily="Inter" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"></TextBlock>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Grid>
                        <Grid Height="360">
